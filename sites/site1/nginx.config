server {
    listen 80;
    gzip on;
    gzip_types text/html text/css application/javascript image/jpeg;
    
    root /usr/share/nginx/html;
    index index.html;

    # Включить ETag для всех статических файлов
    etag on;

    # Явные правила для SEO-файлов - ДОЛЖНЫ БЫТЬ ПЕРВЫМИ
    location = /robots.txt {
        access_log off;
        log_not_found off;
        add_header Cache-Control "no-cache, must-revalidate";
        try_files $uri =404;
    }

    location = /sitemap.xml {
        access_log off;
        log_not_found off;
        add_header Cache-Control "no-cache, must-revalidate";
        add_header Content-Type "application/xml; charset=utf-8";
        try_files $uri =404;
    }

    # Для HTML файлов - полное отключение кеширования
    location ~* \.html$ {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
        try_files $uri $uri/ =404;
    }

    # Для CSS и JS файлов - кеширование с проверкой изменений
    location ~* \.(css|js)$ {
        add_header Cache-Control "public, max-age=3600, must-revalidate"; # 1 час
        try_files $uri $uri/ =404;
    }

    # Для изображений и шрифтов - более мягкое кеширование
    location ~* \.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ {
        add_header Cache-Control "public, max-age=2592000"; # 30 дней
        try_files $uri $uri/ =404;
    }

    # Основная location для остальных файлов
    location / {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
        try_files $uri $uri/ =404;
    }
}